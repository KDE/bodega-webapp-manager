.navbar.navbar-inverse.navbar-fixed-top(id='navigator')
  .navbar-inner
    ul.nav.pull-right
      li
        a.btn.btn-inverse(href='/index')
          i.icon-home.icon-white
          |&nbsp;Home
      li.divider-vertical
      if inDistributorGroup || inPublisherGroup
        li
          a.btn.btn-inverse(href='/asset/list')
            i.icon-th-list.icon-white
            |&nbsp;Assets
        li.divider-vertical
      if inManagementGroup
        li
          a.btn.btn-inverse(href='/asset/publish')
            i.icon-thumbs-up.icon-white
            |&nbsp;Publish
        li.divider-vertical
      if inDistributorGroup || inPublisherGroup
        li
          a.btn.btn-inverse(href='/store/list')
            i.icon-shopping-cart.icon-white
            |&nbsp;Stores
        li.divider-vertical
      li
        a.btn.btn-inverse(href='/stats/assets')
          i.icon-signal.icon-white
          |&nbsp;Statistics
      li.divider-vertical
      li
        a.btn.btn-inverse(href='/partner/list')
          i.icon-briefcase.icon-white
          |&nbsp;Partners
      li.divider-vertical
      li.dropdown
        a(href='#', data-toggle='dropdown', id='dLabel').btn.btn-inverse.dropdown-toggle
          i.icon-user.icon-white
          |&nbsp;#{userName}&nbsp;
          b.caret
        ul.dropdown-menu(role='menu', aria-labelledby='dLabel')
          li
            a(href='/account/modify')
              i.icon-user.icon-black
              |&nbsp;Edit Account
          li
            a(href='/logout')
              i.icon-off.icon-black
              |&nbsp;Logout
