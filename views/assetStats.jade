extends layout
block head
  Sale statistics for your #{network} Account
  script(src='/js/ext-all.js')
  script
    Ext.onReady(function() {

    var stats = !{stats};

    var chartFields = []

    var store = Ext.create('Ext.data.JsonStore', {
        fields: ['dateof', 'total'],
        data: stats
    });

    Ext.create('Ext.chart.Chart', {
        renderTo: Ext.getBody(),
        width: 500,
        height: 300,
        animate: true,
        store: store,
        axes: [
            {
                type: 'Numeric',
                position: 'left',
                fields: ['total'],
                label: {
                    renderer: Ext.util.Format.numberRenderer('0,0')
                },
                title: 'Points',
                grid: true,
                minimum: 0
            },
            {
                type: 'Category',
                position: 'bottom',
                fields: ['dateof'],
                title: 'Month',
                label: {
                    renderer: Ext.util.Format.dateRenderer('M')
                },
            }
        ],
        series: [
            {
                type: 'line',
                highlight: {
                    size: 7,
                    radius: 7
                },
                axis: 'left',
                xField: 'dateof',
                yField: 'total',
                markerConfig: {
                    type: 'cross',
                    size: 4,
                    radius: 4,
                    'stroke-width': 0
                }
            }
        ]
    });
    });

block body
  .title
    h1(align="center") Statistics  #{network}
    include navigator
    .container-fluid
      .row-fluid
